{
    "extends": "app-typescript-config/next.json",
    "compilerOptions": {
        "target": "ES2023",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": false,
        "incremental": true,
        "strict": true
    },
    "include": [
        ".storybook/**/*",
        "next-env.d.ts",
        "sentry.*.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "tailwind.config.ts",
        "lingui.config.ts",
        ".next/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
