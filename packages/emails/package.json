{
    "name": "app-emails",
    "version": "0.1.0",
    "private": true,
    "imports": {
        "#*": "./src/*"
    },
    "type": "module",
    "exports": {
        "./Emails": {
            "types": "./src/Emails.ts",
            "default": "./dist/Emails.js"
        },
        "./EmailVerification": {
            "types": "./src/EmailVerification.tsx",
            "default": "./dist/EmailVerification.js"
        }
    },
    "devDependencies": {
        "@lingui/cli": "^5.1.0",
        "@lingui/macro": "^5.1.0",
        "@lingui/swc-plugin": "5.0.1",
        "@swc/cli": "^0.5.2",
        "@types/nodemailer": "^6.4.17",
        "@types/react": "^19.0.1",
        "@types/react-dom": "^19",
        "app-typescript-config": "workspace:^",
        "react-email": "^3.0.4"
    },
    "dependencies": {
        "@lingui/react": "^5.1.0",
        "@react-email/components": "^0.0.31",
        "@react-email/render": "^1.0.3",
        "@sentry/nextjs": "^8.43.0",
        "app-core": "workspace:^",
        "date-fns": "^4.1.0",
        "nodemailer": "^6.9.16",
        "react": "^19.0.0",
        "react-dom": "^19.0.0"
    },
    "scripts": {
        "dev": "email dev --dir dist -p 3001",
        "extract-locale": "lingui extract",
        "extract-locale:clean": "yarn extract-locale --clean",
        "check-locale": "yarn extract-locale && git diff-index --quiet HEAD -- src/locales/messages",
        "compile-locale": "lingui compile --typescript",
        "check-types": "tsc --noEmit",
        "build": "yarn swc ./src/* -d dist --strip-leading-paths",
        "watch": "yarn build -w"
    },
    "sideEffects": false
}
