{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "dev": {
            "cache": false,
            "persistent": true,
            "dependsOn": ["^build", "compile-locale", "copy-widgets"]
        },
        "app-emails#dev": {
            "cache": false,
            "persistent": true,
            "dependsOn": ["^build", "compile-locale", "build"]
        },
        "storybook": {
            "cache": false,
            "persistent": true,
            "dependsOn": ["^build", "compile-locale", "^compile-locale"]
        },
        "build": {
            "dependsOn": [
                "^build",
                "compile-locale",
                "^compile-locale",
                "copy-widgets"
            ],
            "inputs": ["$TURBO_DEFAULT$", "!**/*.stories.{tsx,jsx,mdx}"],
            "outputs": [".next/**", "!.next/cache/**", "dist/**"]
        },
        "compile-locale": {
            "outputs": ["src/**/locales/messages/*.ts"],
            "inputs": ["src/**/locales/messages/*.po"]
        },
        "extract-locale": {
            "outputs": ["src/**/locales/messages/*.po"]
        },
        "extract-locale:clean": {
            "outputs": ["src/**/locales/messages/*.po"]
        },
        "check-locale": {
            "outputs": ["src/**/locales/messages/*.po"]
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "copy-widgets": {
            "dependsOn": ["^build"],
            "outputs": ["public/_widgets/**"]
        },
        "test:storybook": {
            "outputs": ["junit.xml"],
            "dependsOn": ["build:storybook"]
        },
        "start:storybook": {
            "dependsOn": ["build:storybook"],
            "cache": false,
            "persistent": true
        },
        "build:storybook": {
            "dependsOn": ["^compile-locale", "compile-locale"],
            "outputs": ["storybook-static/**"]
        },
        "test": {
            "outputs": ["junit.xml"]
        },
        "test:watch": {
            "cache": false,
            "persistent": true
        },
        "//#format-and-lint": {},
        "//#format-and-lint:fix": {
            "cache": false
        }
    }
}
