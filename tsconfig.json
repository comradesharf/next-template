{
    "compilerOptions": {
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "composite": true,
        "outDir": "types",
        "declaration": true,
        "declarationMap": true
    },
    "exclude": ["node_modules"],
    "references": [
        {
            "path": "apps/portal"
        },
        {
            "path": "packages/emails"
        },
        {
            "path": "packages/pdfs"
        },
        {
            "path": "packages/trpc"
        }
    ]
}
